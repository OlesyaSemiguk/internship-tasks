mixin spoiler(props)
	.spoiler-block__item&attributes(attributes)(data-component='spoiler')
		button.spoiler-block__item__title
			span.spoiler-block__item__title__text!= props.title
			+svg('spoiler-svg').spoiler-block__item__title__svg
		.spoiler-block__item__content 
			p!= props.content



